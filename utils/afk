#!/usr/bin/env bash
set -euo pipefail

# ===================================
# Colors
# ===================================
RED='\e[0;31m'
GREEN='\e[0;32m'
YELLOW='\e[1;33m'
BLUE='\e[0;34m'
MAGENTA='\e[0;35m'
NC='\e[0m' # No Color

# ===================================
# GLOBAL CONFIGURATION
# ===================================
SCRIPT_NAME="$(basename "$0")"
SCRIPT_VERSION="1.0.0"
DEBUG=false
SILENT=false

# ===================================
# DEFAULT CONFIGURATION
# ===================================
DEFAULT_INTERVAL=60
INTERVAL=$DEFAULT_INTERVAL
INSTALL=true

# ===================================
# Logging
# ===================================
log() {
	if [ "$SILENT" != "true" ]; then
		echo -e "${BLUE}==> $1${NC}"
	fi
}
warn() {
	if [ "$SILENT" != "true" ]; then
		echo -e "${YELLOW}⚠️  $1${NC}" >&2
	fi
}
success() {
	if [ "$SILENT" != "true" ]; then
		echo -e "${GREEN}✓ $1${NC}"
	fi
}
abort() {
	if [ "$SILENT" != "true" ]; then
		echo -e "${RED}✗ $1${NC}" >&2
	fi
	exit 1
}
debug() {
	if [ "$DEBUG" = "true" ]; then
		echo -e "${MAGENTA}🐞 DEBUG: $1${NC}"
	fi
}

# ===================================
# UTILITIES
# ===================================
require_cmd() {
	command -v "$1" >/dev/null 2>&1 || abort "'$1' is not installed or not in PATH."
}

check_xdotool() {
	if ! command -v xdotool &>/dev/null; then
		if [[ "$INSTALL" == false ]]; then
			abort "xdotool not found and --no-install was used."
		fi
		info "🔧 Installing xdotool..."
		sudo apt-get update -qq && sudo apt-get install -y xdotool
		success "xdotool installed successfully."
	fi
}

# ===================================
# COMMANDS
# ===================================
cmd_help() {
	cat <<EOF
Usage: $SCRIPT_NAME <command> [options]

Commands:
  run                       Keep the system awake by moving the mouse
  help                      Show this help message
  version                   Show script version

Options:
  --interval SECONDS       Interval in seconds between mouse movements (default: $DEFAULT_INTERVAL)
  --no-install             Skip xdotool auto-install check

Examples:
  $SCRIPT_NAME run --interval 30
  $SCRIPT_NAME version
  $SCRIPT_NAME help
EOF
}

cmd_run() {
	info "Keeping system awake. Interval: ${INTERVAL}s"
	info "Press Ctrl+C to exit."

	while true; do
		eval "$(xdotool getmouselocation --shell 2>/dev/null)"
		xdotool mousemove $((X + 1)) "$Y"
		sleep 1
		xdotool mousemove "$X" "$Y"
		sleep "$INTERVAL"
	done
}

cmd_version() {
	echo "$SCRIPT_NAME version $SCRIPT_VERSION"
}

# ===================================
# MAIN LOGIC
# ===================================
main() {
	local cmd="${1:-}"
	shift || true

	while [[ $# -gt 0 ]]; do
		case "$1" in
		--interval)
			[[ -z "${2:-}" || ! "$2" =~ ^[0-9]+$ ]] && abort "Invalid or missing value for --interval"
			INTERVAL="$2"
			shift
			;;
		--no-install)
			INSTALL=false
			shift
			;;
		--*)
			abort "Unknown option: $1"
			;;
		*)
			[[ -z "$cmd" ]] && cmd="$1" || abort "Multiple commands not allowed"
			;;
		esac
		shift
	done

	case "$cmd" in
	run)
		check_xdotool
		cmd_run
		;;
	help | "")
		cmd_help
		;;
	version)
		cmd_version
		;;
	*)
		abort "Unknown command: $cmd. Use '$SCRIPT_NAME help' to list available commands."
		;;
	esac
}

main "$@"
