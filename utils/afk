#!/bin/bash

set -euo pipefail

# ==========================================
# System Keep Awake Script
# ==========================================
# Keeps the system awake by moving the mouse slightly every N seconds.
# Optionally installs `xdotool` if missing.
#
# Usage:
#   ./keep-awake.sh [--interval N] [--no-install]
# ==========================================

DEFAULT_INTERVAL=60
INTERVAL=$DEFAULT_INTERVAL
INSTALL=true

usage() {
    echo "Usage: $0 [--interval SECONDS] [--no-install]"
    echo "  --interval N     Interval in seconds between mouse movements (default: $DEFAULT_INTERVAL)"
    echo "  --no-install     Skip xdotool auto-install check"
    exit 1
}

check_xdotool() {
    if ! command -v xdotool &>/dev/null; then
        if [[ "$INSTALL" == false ]]; then
            echo "❌ xdotool not found and --no-install was used."
            exit 1
        fi
        echo "🔧 Installing xdotool..."
        sudo apt-get update -qq && sudo apt-get install -y xdotool
    fi
}

keep_awake() {
    echo "🟢 Keeping system awake. Interval: ${INTERVAL}s"
    echo "Press Ctrl+C to exit."

    while true; do
        eval "$(xdotool getmouselocation --shell 2>/dev/null)"
        xdotool mousemove $((X + 1)) "$Y"
        sleep 1
        xdotool mousemove "$X" "$Y"
        sleep "$INTERVAL"
    done
}

main() {
    # Parse CLI args
    while [[ $# -gt 0 ]]; do
        case "$1" in
        --interval)
            shift && INTERVAL="$1"
            [[ ! "$INTERVAL" =~ ^[0-9]+$ ]] && echo "Invalid interval: $INTERVAL" && usage
            ;;
        --no-install)
            INSTALL=false
            ;;
        -h | --help)
            usage
            ;;
        *)
            echo "Unknown option: $1"
            usage
            ;;
        esac
        shift
    done

    check_xdotool
    keep_awake
}

main "$@"
